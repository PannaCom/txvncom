@*@model PagedList.IPagedList<ThueXeVn.Models.driver_rate_comment>
    @using PagedList.Mvc;*@
@model List<ThueXeVn.Models.driver_rate_comment>

@if (Model != null)
{
    if (Model.Count > 0)
    {
        int i = 1;
        foreach (var item in Model)
        {
            <div id="review-@i" class="review sub-section individual-review-item">
                <div class="col-xs-12 col-sm-3 review-info">
                    <div class="review-comment-score">
                        <span>@item.cus_rate</span>
                    </div>

                    <input type="hidden" class="rating-tooltip rate_review_@i" id="rate_review_@i" name="rate_review_@i" data-filled="fa fa-star fa_red" data-empty="fa fa-star-o fa_red" data-fractions="1" data-readonly>
                    <script>
                        $(document).ready(function () {
                            $('#rate_review_@i').rating('rate', @item.cus_rate);
                        })

                    </script>
                    <div class="review-info-detail">
                        <span class="review-reviewer-name">
                            <strong>@item.cus_name</strong>
                        </span>
                    </div>
                </div>
                <div class="col-sm-9 col-xs-12">
                    <div class="review-comment-bubble">
                        <div class="review-comment-title">
                            <span>“@item.cus_comment”</span>
                        </div>

                        <div class="review-comment-date-only">
                            <span class="review-date">Đã nhận xét vào @string.Format("Ngày {0:dd/MM/yyyy, HH:mm:ss tt}", item.cm_date)</span>
                        </div>
                    </div>
                    @*<div class="helpful_btn_container review-info-bottom">
                            <span class="helpful_btn_state">Cám ơn phản hồi của bạn!</span>
                        </div>*@
                    <div class="helpful_btn_container review-info-bottom">
                        <div class="helpful_btn_state" id="vote_cm_@item.cus_cm_id">
                            @if (item.cm_like != null)
                            {
                                <text>
                                    @item.cm_like Nhận xét này hữu ích với bạn?
                                    <a href="#" onclick="danh_gia_r(@item.cus_cm_id, 1);">Có</a>
                                    <a href="#" onclick="danh_gia_r(@item.cus_cm_id, 0);">Không</a>
                                </text>
                            }
                            else
                            {
                                <text>
                                    Nhận xét này hữu ích với bạn?
                                    <a href="#" onclick="danh_gia_r(@item.cus_cm_id, 1);">Có</a>
                                    <a href="#" onclick="danh_gia_r(@item.cus_cm_id, 0);">Không</a>
                                </text>
                            }

                        </div>

                    </div>
                </div>
            </div>
                            i++;
        }
    }

}
