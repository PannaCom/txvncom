@{
    string url = Request.Url.Authority + HttpContext.Current.Request.RawUrl.ToString();
    if (Request.ServerVariables["HTTPS"] == "on")
    {
        url = "https://" + url;
    }
    else
    {
        url = "http://" + url;
    }
}

@{

    Layout = "~/Views/Shared/_LayoutContent.cshtml";
    ViewBag.title = "Thủ tục Đăng ký Grap và Đăng Ký Uber";
    ViewBag.des = "Thủ tục Đăng ký Grap và Đăng Ký Uber dễ dàng nhanh chóng";
    ViewBag.keywords = "thủ tục, đăng ký, uber, grab";
    ViewBag.url = @url;
}

