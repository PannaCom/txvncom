@model List<ThueXeVn.Models.driver_rate_comment>
@if (Model != null)
{
    if (Model.Count > 0)
    {
        var n = Model.Sum(x => x.cus_rate) / Model.Count;
        <p>
            <input type="hidden" class="rating-tooltip danh_gia_chung" id="danh_gia_chung_rating" data-filled="fa fa-star fa_red" data-empty="fa fa-star-o fa_red" data-fractions="2" data-readonly>
            <span style="display: inline-block; vertical-align: middle;margin-bottom: 6px;">@Model.Count Lượt đánh giá.</span>
        </p>

        <script>
            $(document).ready(function () {
                $('#danh_gia_chung_rating').rating('rate', @n);
            })
        </script>
    }
}

