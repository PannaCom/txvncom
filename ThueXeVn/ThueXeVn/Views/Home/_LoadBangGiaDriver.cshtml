@model List<ThueXeVn.Models.driver_car_price>

@if (Model != null)
{
    if (Model.Count > 0)
    {
        <div class="row item_profile">
            <div class="col-sm-3">
                <h3>Bảng giá xe</h3>
            </div>
            <div class="col-sm-9">
                <div style="margin-top: 20px;">
                    @foreach (var item in @Model)
                    {
                        string tenxe = "Xe " + item.cp_car_type + " chỗ";
                        if (item.cp_car_type == 4) { tenxe += " (giá siêu rẻ, có cốp)"; }
                        if (item.cp_car_type == 5) { tenxe += " (có cốp)"; }
                        <p style="border-bottom: 1px dotted;padding-bottom: 5px;"><b>@tenxe</b>: <span>@string.Format("{0:#,###} đồng/km.", item.cp_price)</span></p>
                    }
                </div>
            </div>
        </div>
    }

}
