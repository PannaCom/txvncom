@{
    ViewBag.Title = "Tài xế xe đăng nhập";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

@section Styles {
    <link href="~/Content/stylemh.css" rel="stylesheet" />
    <style>
        #form_login {
            padding: 10px;
            border: 1px solid #ddd;
            color: #333;
        }
    </style>
}

<section id="dangnhap_cong_tac_vien">
    <div class="container">

        <div class="row">
            <div class="col-md-6">
                @using (Html.BeginForm("LoginTaiXe", "Home", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", role = "form", @id = "form_login" }))
                {
                @Html.AntiForgeryToken()


                <h4 style="text-align: center; border-bottom: 1px solid;padding: 10px 0;">Nhập số điện thoại và mật khẩu để đăng nhập</h4>

                <div class="form-group">
                    <label for="phone" class="control-label col-md-4">Số điện thoại:</label>
                    <div class="col-md-8">
                        <input type="text" name="phone" id="phone" placeholder="Nhập số điện thoại của tài xế" class="form-control" required />
                    </div>
                </div>

                <div class="form-group">
                    <label for="car_number" class="control-label col-md-4">Mật khẩu:</label>
                    <div class="col-md-8">
                        <input type="password" name="pass_taixe" id="pass_taixe" placeholder="Nhập mật khẩu tài xế" class="form-control" required" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <button class="btn btn-primary"><i class="fa fa-sign-in"></i> Đăng nhập</button>
                        <a href="/Home/Taixe">Đăng nhập nếu chưa có mật khẩu</a>
                    </div>
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                }
            </div>
        </div>
    </div>
</section>
