<div class="row">
    <div class="col-md-9" style="padding: 0 5px;">
        <ul class="list_tintuc">
            @foreach (var item in Model)
            {
                link = "/tin/" + ThueXeVn.Config.unicodeToNoMark(@item.title) + "-" + @item.id;
                <li class="items row">
                    <div class="col-md-9 col-md-push-3">
                        <h3><a href="@link">@Html.Raw(@item.title)</a></h3>
                        <p>Gửi ngày @item.datetime</p>
                        <p class="intro">@Html.Raw(@item.des)</p>
                    </div>
                    <a class="col-md-3 col-md-pull-9" href="@link" class="img_a"><img class="img-responsive" src="@item.image" alt="@Html.Raw(@item.title)"></a>
                </li>
            }

        </ul>
    </div>
    <div class="col-md-3">
        <!-- Widget: Categories -->
        <div class="widget">
            <h3>FANPAGE</h3>
            <iframe src="https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2FThu%25C3%25AA-Xe-Vi%25E1%25BB%2587t-Nam-1843483739215898%2F&tabs=timeline&width=340&height=500&small_header=false&adapt_container_width=true&hide_cover=false&show_facepile=true&appId=1745887292346789" width="340" height="500" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowtransparency="true"></iframe>
        </div>
    </div>
</div>

<div class="row">
    @if (Model.PageCount > 1)
    {
        <div class="col-sm-9">
            <ul class="pagination clearfix">
                <li class="disabled"><a href="#">«</a></li>
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (i != ViewBag.page)
                    {
                        <text>
                            <li><a href="/tin/page=@i">@i</a></li></text>
                    }
                    else
                    {
                        <text>
                            <li><a href="/tin/page=@i" style="background-color:#8a6d3b;">@i</a></li></text>
                    }
                }
            </ul>
        </div>
    }
</div>