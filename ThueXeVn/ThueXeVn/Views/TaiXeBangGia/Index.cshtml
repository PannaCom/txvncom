            if (value === "") {
                alert("Vui lòng nhập ghi chú nhà xe");
                return false;
            }
            CKEDITOR.ajax.post(url, JSON.stringify({ id: id, note_driver: value }), 'application/json', function (data) {
                if (data !== "") {
                    alert('Đã cập nhật ghi chú nhà xe.');
                }
