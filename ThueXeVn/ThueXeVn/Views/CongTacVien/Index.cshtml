
@{
    ViewBag.Title = "Trang quản trị dành cho cộng tác viên";
    Layout = "~/Views/Shared/_LayoutAdminCTV.cshtml";
}

@{
    string link2 = "";
    if (ViewBag.linkshare != null)
    {
        link2 = ViewBag.linkshare;
    }    
}

@section PageTitleHeader {
    <div class="page-header">
        <h3><i class="fa fa-dashboard fa-2x fa-color-red"></i> @ViewBag.Title</h3>
    </div>
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="form-horizontal">
            <div class="col-md-12">
                <label class="control-label">Link đặt xe</label>
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Link chia sẻ" value="@link2" name="linkchiase" id="linkchiase" aria-describedby="basic-addon1" readonly>
                    <span class="input-group-addon btn btn-primary" id="basic-addon2"><i class="fa fa-link"></i> Sao chép</span>
                </div>
            </div>              

                     
        </div>
    </div>
</div>

@section scripts {
    
       <script>

           var copyTextareaBtn = document.querySelector('#basic-addon2');

           copyTextareaBtn.addEventListener('click', function (event) {
               var copyTextarea = document.querySelector('#linkchiase');
               copyTextarea.select();

               try {
                   var successful = document.execCommand('copy');
                   var msg = successful ? 'successful' : 'unsuccessful';
                   if (msg === "successful") {
                       alert('Đã sao chép link để dán');
                   }
                   console.log('Copying text command was ' + msg);
               } catch (err) {
                   console.log('Oops, unable to copy');
               }
           });

       </script>
    
 }