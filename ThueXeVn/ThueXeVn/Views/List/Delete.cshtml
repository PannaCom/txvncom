@using ThueXeVn.Models
@model invoice
@{
    ViewBag.Title = "Xóa bảng kê";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h3><i class="fa fa-list fa-2x fa-color-red"></i> @ViewBag.Title</h3>
        </div>
    </div>
</div>

@if (Model != null)
{

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default box box-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Bạn chắc chắn muốn bảng kê này: <b>@Html.DisplayFor(m => m.customer_name)-@Html.DisplayFor(m => m.id)?</b></h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger" id="confirmdelete">
                            <i class=" fa fa-trash">
                            </i> Xóa
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>

}
else
{
    <span>Không tìm thấy tòa nhà yêu cầu.</span>
}

@section Scripts {

    <script>
        function confirmDelete(event) {
            if (confirm("Bạn không thể khôi phục lại nếu bạn đã xóa. Bạn chắc chắn tiếp tục xóa.")) {
                return true;
            } else {
                event.preventDefault();
                return false;
            }
        }

        $(document).ready(function () {
            $('#confirmdelete').on('click', function (e) {
                confirmDelete(e);
            })
        })
    </script>
}

